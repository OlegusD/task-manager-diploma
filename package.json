{
    "name": "task-manager-monorepo",
    "private": true,
    "workspaces": [
        "task-manager",
        "task-manager-be"
    ],
    "scripts": {
        "dev": "concurrently -n FE,BE -c auto \"npm:fe:dev\" \"npm:be:dev\"",
        "fe:dev": "npm --workspace task-manager run dev",
        "be:dev": "npm --workspace task-manager-be run dev",
        "install": "concurrently -n FE,BE -c auto \"npm:fe:install\" \"npm:be:install\"",
        "fe:install": "npm --workspace task-manager run install",
        "be:install": "npm --workspace task-manager-be run install",
        "build": "npm-run-all -l build:be build:fe",
        "build:fe": "npm --workspace task-manager run build",
        "build:be": "npm --workspace task-manager-be run build",
        "start": "concurrently -n BE,FE -c auto \"npm:be:start\" \"wait-on tcp:3001 && npm:fe:start\"",
        "fe:start": "npm --workspace task-manager run start",
        "be:start": "npm --workspace task-manager-be run start",
        "lint": "npm-run-all -p lint:fe lint:be",
        "lint:fe": "npm --workspace task-manager run lint --if-present",
        "lint:be": "npm --workspace task-manager-be run lint --if-present",
        "test": "npm-run-all -p test:fe test:be",
        "test:fe": "npm --workspace task-manager run test --if-present",
        "test:be": "npm --workspace task-manager-be run test --if-present",
        "clean": "rimraf node_modules task-manager/node_modules task-manager-be/node_modules task-manager/dist task-manager-be/dist"
    },
    "devDependencies": {
        "concurrently": "^9.0.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^6.0.0",
        "wait-on": "^8.0.0"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
